<h1>Task manager</h1>

<div class="task-container">
  <h2>Tasks</h2>
  <div class="tasks">
    <% @tasks.each do |task| %>
      <div class="task">
        <h3><%= task.title %></h3>
        <label class="container">
          <input type="checkbox" onclick="return false;" <%= task.completed ? checked="checked" : checked="" %>>
          <%= link_to "Show more", task_path(task) %>
          <span class="checkmark"></span>
        </label>
        <%= link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
</div>

<div class="create-container">
<h2>Create new task</h2>
  <div class="center">
    <div class="task2">
      <%= link_to "New task", new_task_path %>
    </div>
  </div>
</div>
